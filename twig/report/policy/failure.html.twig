<div class="row result-group">
  <div class="col-sm-12 col-md-10">
    <h4 id="{{ result.policy.name }}">{{ result.policy.title }} <span class="text-danger glyphicon glyphicon-remove" aria-hidden="true"></span></h4>

    {{ include(template_from_string(result.policy.description | mustache2twig)) | markdown_to_html }}

    <div class="alert alert-danger" role="alert">
      {% with result.tokens %}
      {{ include(template_from_string(result.policy.failure | mustache2twig)) | markdown_to_html }}
      {% endwith %}
    </div>

    {% if result.hasWarning %}
    <div class="alert alert-warning" role="alert">
      {% with result.tokens %}
      {{ include(template_from_string(result.policy.warning | mustache2twig)) | markdown_to_html }}
      {% endwith %}
    </div>
    {% endif %}
    <div class="alert alert-info" role="alert">
    <h5>Remediation</h5>
    {% with result.tokens %}
    {{ include(template_from_string(result.policy.remediation | mustache2twig)) | markdown_to_html }}
    {% endwith %}
    </div>
  </div>
</div>
