
<div class="row result-group">
  <div class="col-sm-12 col-md-10">
    <h4 id="{{ result.policy.name }}">{{ result.policy.title }} <small class="label label-{{ result.type }}">{{ result.type|split('-')|join(' ')|title  }} <span class="glyphicon {% if result.isSuccessful %}glyphicon-ok{% else %}glyphicon-remove{% endif %}" aria-hidden="true"></span></small></h4>
    {{ include(template_from_string(result.policy.description | mustache2twig)) | markdown_to_html }}
    <div class="alert alert-{{ result.type }}" role="alert">
      This policy was unable to determine the state of {{ result.policy.title }}.
    </div>
    {% if result.tokens.exception is defined %}
    <code>
      <pre>
        {{ result.tokens.exception }}
      </pre>
    </code>
    {% endif %}
  </div>
</div>
