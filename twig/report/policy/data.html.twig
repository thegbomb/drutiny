<div class="row result-group py-3">
  <div class="col">

    <h3 id="{{ audit_response.policy.name }}">{{ audit_response.policy.title }}</h3>
    {{ include(template_from_string(audit_response.policy.description | mustache2twig)) | markdown_to_html }}

    <div class="card border-dark mb-3">
      <div class="card-body">
        <div class="card-text">
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.success | mustache2twig, "success field on data.html.twig")) | markdown_to_html }}
        {% endwith %}
        </div>
      </div>
    </div>

  </div>
</div>
