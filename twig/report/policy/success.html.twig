<div class="row result-group">
  <div class="col-sm-12 col-md-10">
    <h4 id="{{ result.policy.name }}">{{ result.policy.title }} <small class="label label-{{ result.type }}">{{ result.type|split('-')|join(' ') }} <span class="glyphicon {% if result.isSuccessful %}glyphicon-ok{% else %}glyphicon-remove{% endif %}" aria-hidden="true"></span></small></h4>
    <p>{{ result.policy.description | markdown_to_html }}</p>
    <div class="panel panel-success">
      <div class="panel-heading">{{ result.type|split('-')|join(' ') }}</div>
      <div class="panel-body">
        {% with result.tokens %}
        {{ include(template_from_string(result.policy.success)) | markdown_to_html }}
        {% endwith %}
        {% if result.hasWarning %}
        <div class="alert alert-warning" role="alert">
          {% with result.tokens %}
          {{ include(template_from_string(result.policy.warning)) | markdown_to_html }}
          {% endwith %}
        </div>
        {% endif %}
      </div>
    </div>

  </div>
</div>
